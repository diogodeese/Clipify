generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  username   String
  avatar     String
  banner     String
  created_at DateTime @default(now())
  Posts      Post[]
  Likes      Like[]

  @@map("users")
}

model Post {
  id         String   @id @default(uuid())
  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
  title      String
  content    String
  created_at DateTime @default(now())
  Likes      Like[]
  Videos     Video[]

  @@map("posts")
}

model Video {
  id       String   @id @default(uuid())
  post_id  String
  post     Post     @relation(fields: [post_id], references: [id])
  url      String
  duration DateTime

  @@map("videos")
}

model Like {
  id         String   @id @default(uuid())
  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
  post_id    String
  post       Post     @relation(fields: [post_id], references: [id])
  created_at DateTime @default(now())

  @@map("likes")
}
